generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String?  @unique
  username  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id            Int            @id @default(autoincrement())
  userId        Int
  user          User           @relation(fields: [userId], references: [id])
  total         Float
  status        String         @default("PENDING") // PENDING, PAID, CANCELLED
  paymentMethod String         @default("CREDIT_CARD") // CREDIT_CARD, PIX
  paymentId     String?        @unique // Mercado Pago Payment ID
  ticketUrl     String?        @db.Text // URL for PIX/Ticket
  items         Json           @default("[]") // Store items snapshot for fulfillment
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  commands      CommandQueue[]
}

model CommandQueue {
  id          Int      @id @default(autoincrement())
  command     String   @db.Text
  playerName  String
  serverScope String   @default("global") // global, survival, anarchy
  status      String   @default("PENDING") // PENDING, PROCESSED, FAILED
  orderId     Int?
  order       Order?   @relation(fields: [orderId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("store_command_queue") // Maps to the table name expected by the plugin
}

model Product {
  id          String   @id
  name        String
  description String   @db.Text
  price       Float
  category    String // global, survival, anarchy
  image       String?
  commands    Json
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Visit {
  id        Int      @id @default(autoincrement())
  path      String
  ipHash    String // Anonymized IP
  userAgent String?
  createdAt DateTime @default(now())
}

model Coupon {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  discount  Float
  uses      Int      @default(0)
  maxUses   Int?
  expiresAt DateTime?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
